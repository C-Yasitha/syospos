<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.brylix.derp.controller.LoginController" prefWidth="350" prefHeight="200">
    <children>
        <TextField fx:id="usernameField" layoutX="100" layoutY="50" promptText="Username" />
        <PasswordField fx:id="passwordField" layoutX="100" layoutY="80" promptText="Password" />
        <Button fx:id="loginButton" layoutX="100" layoutY="120" text="Login" onAction="#handleLoginButton" />
        <Button fx:id="exitButton" layoutX="200" layoutY="120" text="Exit" onAction="#handleExitButton" />
    </children>
</AnchorPane>
